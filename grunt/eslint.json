{
  "extends": ["../node_modules/eslint-config-standard/eslintrc.json"],
  "rules": {
    "semi": [2, "always"],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
    "spaced-comment": 0,
    "operator-linebreak": [2, "after"],
    "new-cap": 0,
    "generator-star-spacing": ["error", "after"]
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "browser": true
  }
}
